<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_mentorApplicationFragment"
            app:destination="@id/mentorApplicationFragment" />
    </fragment>
    <fragment
        android:id="@+id/mentorManagerProfileFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.mentorManagerProfile.MentorManagerProfileFragment"
        android:label="MentorManagerProfileFragment"
        tools:layout="@layout/fragment_mentor_manager_profile">
        <action
            android:id="@+id/action_mentorManagerProfileFragment_to_reportDetailsFragment"
            app:destination="@id/reportDetailsFragment" />
        <action
            android:id="@+id/action_mentorManagerProfileFragment_to_certificateFragment"
            app:destination="@id/certificateFragment" />
        <action
            android:id="@+id/action_mentorManagerProfileFragment_to_programDetailsFragment"
            app:destination="@id/programDetailsFragment" />
        <action
            android:id="@+id/action_mentorManagerProfileFragment_to_taskDetailsFragment"
            app:destination="@id/taskDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.notification.NotificationFragment"
        android:label="NotificationFragment"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.search.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/reportDetailsFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.mentorManagerProfile.report.ReportDetailsFragment"
        android:label="ReportDetailsFragment"
        tools:layout="@layout/fragment_report_details" />
    <fragment
        android:id="@+id/certificateFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.mentorManagerProfile.certificate.CertificateFragment"
        android:label="CertificateFragment"
        tools:layout="@layout/fragment_certificate">
        <argument
            android:name="certificateTitle"
            app:argType="string" />
        <!--        <action-->
        <!--            android:id="@+id/action_certificateFragment_to_basicDialog"-->
        <!--            app:destination="@id/basicDialog" />-->
    </fragment>
    <fragment
        android:id="@+id/programFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.program.ProgramFragment"
        android:label="ProgramFragment"
        tools:layout="@layout/fragment_program">
        <action
            android:id="@+id/action_programFragment_to_programDetailsFragment"
            app:destination="@id/programDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/programDetailsFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.mentorManagerProfile.program.ProgramDetailsFragment"
        android:label="ProgramDetailsFragment"
        tools:layout="@layout/fragment_program_details" />

    <fragment
        android:id="@+id/taskDetailsFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.mentorManagerProfile.task.TaskDetailsFragment"
        android:label="TaskDetailsFragment"
        tools:layout="@layout/fragment_task_details" />

    <fragment
        android:id="@+id/taskFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.task.TaskFragment"
        android:label="TaskFragment"
        tools:layout="@layout/fragment_task">
        <action
            android:id="@+id/action_taskFragment_to_taskDetailsFragment"
            app:destination="@id/taskDetailsFragment" />
        <action
            android:id="@+id/action_taskFragment_to_taskCreationFragment"
            app:destination="@id/taskCreationFragment" />
    </fragment>
    <fragment
        android:id="@+id/mentorFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.mentor.MentorFragment"
        android:label="MentorFragment"
        tools:layout="@layout/fragment_mentor">
        <action
            android:id="@+id/action_mentorFragment_to_mentorManagerProfileFragment"
            app:destination="@id/mentorManagerProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.setting.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/chatMessagesFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.message.ChatMessagesFragment"
        android:label="ChatMessagesFragment"
        tools:layout="@layout/fragment_chat_messages">
        <action
            android:id="@+id/action_chatMessagesFragment_to_conversationFragment"
            app:destination="@id/conversationFragment" />
    </fragment>

    <fragment
        android:id="@+id/conversationFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.message.conversation.ConversationFragment"
        android:label="ConversationFragment"
        tools:layout="@layout/fragment_conversation" />

    <fragment
        android:id="@+id/managerFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.manager.ManagerFragment"
        android:label="ManagerFragment"
        tools:layout="@layout/fragment_manager">
        <action
            android:id="@+id/action_managerFragment_to_adminProfileFragment"
            app:destination="@id/adminProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminProfileFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.manager.profile.AdminProfileFragment"
        android:label="AdminProfileFragment"
        tools:layout="@layout/fragment_admin_profile" />
    <fragment
        android:id="@+id/mentorApplicationFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.mentorApplication.MentorApplicationFragment"
        android:label="MentorApplicationFragment"
        tools:layout="@layout/fragment_mentor_application">
        <action
            android:id="@+id/action_mentorApplicationFragment_to_requestedProfileFragment"
            app:destination="@id/requestedProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/requestedProfileFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.mentorApplication.profileRequested.RequestedProfileFragment"
        android:label="RequestedProfileFragment"
        tools:layout="@layout/fragment_requested_profile">
        <argument
            android:name="type"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/certificatesFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.certificate.CertificatesFragment"
        android:label="CertificatesFragment"
        tools:layout="@layout/fragment_certificates">
        <action
            android:id="@+id/action_certificatesFragment_to_certificateStatusFragment"
            app:destination="@id/certificateStatusFragment" />
        <action
            android:id="@+id/action_certificatesFragment_to_certificateBeneficiaryFragment"
            app:destination="@id/certificateBeneficiaryFragment" />
    </fragment>

    <fragment
        android:id="@+id/certificateStatusFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.certificate.status.CertificateStatusFragment"
        android:label="CertificateStatusFragment"
        tools:layout="@layout/fragment_certificate_status">
        <argument
            android:name="type"
            app:argType="com.peculiaruc.alc_mmsystem_mentormanager.ui.certificate.CertificateStatus" />
        <action
            android:id="@+id/action_certificateStatusFragment_to_certificateFragment"
            app:destination="@id/certificateFragment" />
    </fragment>

    <fragment
        android:id="@+id/certificateBeneficiaryFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.certificate.beneficiary.CertificateBeneficiaryFragment"
        android:label="CertificateBeneficiaryFragment"
        tools:layout="@layout/fragment_certificate_beneficiary">
        <action
            android:id="@+id/action_certificateBeneficiaryFragment_to_generateCertificateFragment"
            app:destination="@id/generateCertificateFragment" />
    </fragment>
    <fragment
        android:id="@+id/generateCertificateFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.certificate.generateCertificate.GenerateCertificateFragment"
        android:label="GenerateCertificateFragment"
        tools:layout="@layout/fragment_generate_certificate" />
    <fragment
        android:id="@+id/discussionForumFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.discussionForum.DiscussionForumFragment"
        android:label="DiscussionForumFragment"
        tools:layout="@layout/fragment_discussion_forum">
        <action
            android:id="@+id/action_discussionForumFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
        <action
            android:id="@+id/action_discussionForumFragment_to_postDetailsFragment"
            app:destination="@id/postDetailsFragment" />
        <action
            android:id="@+id/action_discussionForumFragment_to_createPostFragment"
            app:destination="@id/createPostFragment" />
    </fragment>

    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.discussionForum.editPost.EditPostFragment"
        android:label="EditPostFragment"
        tools:layout="@layout/fragment_edit_post" />

    <fragment
        android:id="@+id/postDetailsFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.discussionForum.postDetails.PostDetailsFragment"
        android:label="PostDetailsFragment"
        tools:layout="@layout/fragment_post_details" />

    <fragment
        android:id="@+id/createPostFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.discussionForum.createPost.CreatePostFragment"
        android:label="CreatePostFragment"
        tools:layout="@layout/fragment_create_post" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.report.ReportFragment"
        android:label="ReportFragment"
        tools:layout="@layout/fragment_report">
        <action
            android:id="@+id/action_reportFragment_to_reportDetailsFragment"
            app:destination="@id/reportDetailsFragment" />
        <action
            android:id="@+id/action_reportFragment_to_reportCreationFragment"
            app:destination="@id/reportCreationFragment" />
    </fragment>

    <fragment
        android:id="@+id/reportCreationFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.report.createReport.ReportCreationFragment"
        android:label="ReportCreationFragment"
        tools:layout="@layout/fragment_report_creation" />
    <fragment
        android:id="@+id/taskCreationFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.task.taskCreation.TaskCreationFragment"
        android:label="TaskCreationFragment"
        tools:layout="@layout/fragment_task_creation" >
        <action
            android:id="@+id/action_taskCreationFragment_to_taskAssigningMentorFragment"
            app:destination="@id/taskAssigningMentorFragment" />
    </fragment>

    <fragment
        android:id="@+id/taskAssigningMentorFragment"
        android:name="com.peculiaruc.alc_mmsystem_mentormanager.ui.task.taskMentor.TaskAssigningMentorFragment"
        android:label="TaskAssigningMentorFragment"
        tools:layout="@layout/fragment_task_assining_mentor" />


</navigation>