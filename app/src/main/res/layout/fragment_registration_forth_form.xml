<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.peculiaruc.alc_mmsystem_mentormanager.ui.authentication.register.RegisterViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.authentication.register.RegistrationForthFormFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_become_a_mentor_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="31dp"
                    android:text="@string/become_a_mentor_manager"
                    android:textColor="@color/mms_pry_2"
                    android:textSize="18sp"
                    app:fontFamily="@font/mukta_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_fill_in_the_form_below"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fill_in_the_form_below"
                    android:textColor="@color/mms_black_2"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintStart_toStartOf="@+id/textView_become_a_mentor_manager"
                    app:layout_constraintTop_toBottomOf="@id/textView_become_a_mentor_manager" />

                <TextView
                    android:id="@+id/textView_page_4_of_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/page_4_of_4"
                    android:textColor="@color/mms_black_2"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintStart_toStartOf="@+id/textView_fill_in_the_form_below"
                    app:layout_constraintTop_toBottomOf="@id/textView_fill_in_the_form_below" />

                <TextView
                    android:id="@+id/textView_documents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/documents"
                    android:textColor="@color/mms_black_2"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_page_4_of_4"
                    app:layout_constraintTop_toBottomOf="@id/textView_page_4_of_4" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView_documents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_chips_choose"
                    android:paddingBottom="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView_documents"
                    app:layout_constraintTop_toBottomOf="@+id/textView_documents"
                    tools:itemCount="3"
                    tools:listitem="@layout/item_document" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_upload_documents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/upload_documents"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="12sp"
                    app:cornerRadius="5dp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintEnd_toEndOf="@+id/recyclerView_documents"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerView_documents" />

                <TextView
                    android:id="@+id/textView_social"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/social"
                    android:textColor="@color/mms_black_2"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_bold"
                    app:layout_constraintStart_toStartOf="@+id/outlinedTextField_website"
                    app:layout_constraintTop_toBottomOf="@id/button_upload_documents" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedTextField_website"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Website"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/recyclerView_documents"
                    app:layout_constraintTop_toBottomOf="@+id/textView_social"
                    app:startIconDrawable="@drawable/globe_world_earth_">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_regular"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedTextField_github"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/github"
                    app:layout_constraintEnd_toEndOf="@+id/outlinedTextField_website"
                    app:layout_constraintStart_toStartOf="@+id/textView_social"
                    app:layout_constraintTop_toBottomOf="@+id/outlinedTextField_website"
                    app:startIconDrawable="@drawable/github_icon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_regular"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedTextField_instagram"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/instagram"
                    app:layout_constraintEnd_toEndOf="@+id/outlinedTextField_github"
                    app:layout_constraintStart_toStartOf="@+id/outlinedTextField_github"
                    app:layout_constraintTop_toBottomOf="@+id/outlinedTextField_github"
                    app:startIconDrawable="@drawable/instagram_icon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_regular"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedTextField_linkedin"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/linkedin"
                    app:layout_constraintEnd_toEndOf="@+id/outlinedTextField_instagram"
                    app:layout_constraintStart_toStartOf="@+id/outlinedTextField_github"
                    app:layout_constraintTop_toBottomOf="@+id/outlinedTextField_instagram"
                    app:startIconDrawable="@drawable/linkedin_icon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_regular"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/outlinedTextField_twitter"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/twitter"
                    app:layout_constraintEnd_toEndOf="@+id/outlinedTextField_linkedin"
                    app:layout_constraintStart_toStartOf="@+id/outlinedTextField_linkedin"
                    app:layout_constraintTop_toBottomOf="@+id/outlinedTextField_linkedin"
                    app:startIconDrawable="@drawable/twitter_icon">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mukta_regular"
                        android:maxLines="1"
                        android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_next"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:onClick="@{()->viewModel.goToNotification()}"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/mukta_semibold"
                    app:layout_constraintBottom_toBottomOf="@+id/button_previous"
                    app:layout_constraintEnd_toEndOf="@+id/outlinedTextField_twitter"
                    app:layout_constraintStart_toEndOf="@+id/button_previous"
                    app:layout_constraintTop_toTopOf="@+id/button_previous" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_previous"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="34dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="30dp"
                    android:onClick="@{()->viewModel.goToThirdRegistrationForm()}"
                    android:text="@string/previous"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/mms_pry_2"
                    android:textSize="18sp"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/mukta_semibold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_next"
                    app:layout_constraintStart_toStartOf="@+id/outlinedTextField_twitter"
                    app:layout_constraintTop_toBottomOf="@+id/outlinedTextField_twitter"
                    app:layout_constraintVertical_bias="1.0"
                    app:strokeColor="@color/mms_pry_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>