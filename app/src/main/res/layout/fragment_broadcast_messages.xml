<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <!-- Group 591 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/group_591"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Group 563 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/group_428"
            android:layout_width="176dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- arrow-left 1 -->
            <RelativeLayout
                android:id="@+id/arrow_left_"
                android:layout_width="20dp"
                android:layout_height="16dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/arrow_left_"
                android:clipToOutline="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Mentors -->
            <TextView
                android:id="@+id/mentors"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/mukta"
                android:gravity="top"
                android:text="Messages"
                android:textAppearance="@style/mentor_profile_name"
                android:textFontWeight="600"
                app:layout_constraintStart_toEndOf="@+id/arrow_left_"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- comment-circle-chat-message 1 -->
        <RelativeLayout
            android:id="@+id/comment_cir"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/search_1"
            android:clipToOutline="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginTop="17dp"
            android:background="@color/mms_pry_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comment_cir">

            <!-- Frame 330 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/frame_330"
                android:layout_width="139dp"
                android:layout_height="29dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:clipToOutline="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Chats -->
                <TextView
                    android:id="@+id/chats"
                    android:layout_width="40dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal|top"
                    android:text="@string/chats"
                    android:textAppearance="@style/broadcast_m"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Broadcast Messages -->
            <TextView
                android:id="@+id/broadcast_m"
                android:layout_width="170dp"
                android:layout_height="27dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="15dp"
                android:background="@drawable/frame_330"
                android:gravity="center_horizontal|top"
                android:text="@string/broadcast_m"
                android:textAppearance="@style/chats"
                app:layout_constraintBottom_toBottomOf="@+id/frame_330"
                app:layout_constraintStart_toEndOf="@+id/frame_330"
                app:layout_constraintTop_toTopOf="@+id/frame_330" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mentor_tasks_recycleview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/frame_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <!-- Frame 24 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/frame_24"
            android:layout_width="282dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="29dp"
            android:background="@drawable/frame_24"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/mentor_tasks_recycleview">


            <!-- emoji-smiley-happy-face 1 -->
            <RelativeLayout
                android:id="@+id/emoji_smile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/emoji_smiley_happy_face_1"
                android:clipToOutline="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- Type message... -->
            <EditText
                android:id="@+id/type_messag"
                android:layout_width="104dp"
                android:layout_height="27dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:background="@null"
                android:hint="type Message "
                android:layout_marginBottom="4dp"
                android:layout_toEndOf="@+id/emoji_smile"
                android:gravity="top"

                android:textAppearance="@style/type_messag"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/emoji_smile"
                app:layout_constraintTop_toTopOf="parent" />


            <!-- attachment-clip-hook 1 -->
            <RelativeLayout
                android:id="@+id/attachment_"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/attachment_clip_hook_1"
                android:clipToOutline="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- broadcast message -->
        <RelativeLayout
            android:id="@+id/broadcast_m_vector"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/broadcast_m"
            android:clipToOutline="true"
            app:layout_constraintBottom_toBottomOf="@+id/frame_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frame_24"
            app:layout_constraintTop_toTopOf="@+id/frame_24" />

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>