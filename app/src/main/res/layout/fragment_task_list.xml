<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mentor_reports.TaskListFragment">

    <ImageView
        android:id="@+id/taskBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:focusable="true"
        android:src="@drawable/arrow_left_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/taskTitle"
        style="@style/title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="31dp"
        android:text="@string/text_select_task"
        app:layout_constraintStart_toEndOf="@+id/taskBack"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/taskSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="21dp"
        android:maxWidth="290dp"
        android:textColor="@color/mms_black_5"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:fontFamily="@font/mukta"
        android:searchHintIcon="@drawable/abc_ic_search"
        android:searchIcon="@drawable/abc_ic_search"
        android:closeIcon="@null"
        android:queryBackground="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/taskButtonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/taskTitle" />

    <androidx.cardview.widget.CardView
        android:id="@+id/taskButtonContainer"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:cardBackgroundColor="@color/mms_pry_2"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskTitle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/taskAll"
                style="@style/group_button_text_selected"
                android:layout_width="0dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="All"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/taskAssigned"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/taskAssigned"
                style="@style/group_button_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Assigned"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/taskCompleted"
                app:layout_constraintStart_toEndOf="@+id/taskAll"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/taskCompleted"
                style="@style/group_button_text"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Completed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/taskMyTask"
                app:layout_constraintStart_toEndOf="@+id/taskAssigned"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/taskMyTask"
                style="@style/group_button_text"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="5dp"
                android:text="My Task"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/taskCompleted"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/taskList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/taskButtonContainer"
        tools:listitem="@layout/task_item" />

</androidx.constraintlayout.widget.ConstraintLayout>