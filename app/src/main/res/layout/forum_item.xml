<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/forumImg"
                android:layout_width="49dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageView"
                app:srcCompat="@drawable/img_test" />

            <TextView
                android:id="@+id/forumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="22dp"
                android:text="Samuel Kebede"
                android:textColor="@color/mms_black_2"
                android:textFontWeight="600"
                android:textSize="18sp"
                app:fontFamily="@font/mukta"
                app:layout_constraintStart_toEndOf="@+id/forumImg"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/forumPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mentor Manager"
                android:textColor="@color/mms_black_5"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:fontFamily="@font/mukta"
                app:layout_constraintStart_toStartOf="@+id/forumName"
                app:layout_constraintTop_toBottomOf="@+id/forumName" />

            <TextView
                android:id="@+id/forumTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp"
                android:text="The New MMS Discussion Forum "
                android:textColor="@color/mms_black_2"
                android:textFontWeight="600"
                android:textSize="16sp"
                app:fontFamily="@font/mukta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forumImg" />

            <TextView
                android:id="@+id/forumText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/mms_black_5"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:fontFamily="@font/mukta"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu turpis molestie, dictum est a, mattis tellus. Sed dignissim, metus nec fringilla accumsan, risus sem sollicitudin "
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/forumTitle"
                app:layout_constraintTop_toBottomOf="@+id/forumTitle" />

            <ImageView
                android:id="@+id/forumIconMess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_icon_message" />

            <ImageView
                android:id="@+id/forumIconBroad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/forumIconMess"
                app:srcCompat="@drawable/ic_broadcast" />

            <ImageView
                android:id="@+id/forumIconShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/forumIconBroad"
                app:srcCompat="@drawable/ic_share_arrow" />

            <ImageView
                android:id="@+id/forumIconClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="27dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/forumTime"
                app:srcCompat="@drawable/ic_clock" />

            <TextView
                android:id="@+id/forumTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="24dp"
                android:text="5h ago"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/forumMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>