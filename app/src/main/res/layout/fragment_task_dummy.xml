                        android:scaleType="centerCrop"
                        android:src="@drawable/task"
                        android:backgroundTint="@color/mms_black_4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintDimensionRatio="24:26"
