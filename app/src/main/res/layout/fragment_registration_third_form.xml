<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.peculiaruc.alc_mmsystem_mentormanager.ui.authentication.register.RegisterViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.authentication.register.RegistrationThirdFormFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView_become_a_mentor_manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="31dp"
                    android:text="@string/become_a_mentor_manager"
                    android:textColor="@color/mms_pry_2"
                    android:textSize="18sp"
                    app:fontFamily="@font/mukta_bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_fill_in_the_form_below"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fill_in_the_form_below"
                    android:textColor="@color/mms_black_2"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintStart_toStartOf="@+id/textView_become_a_mentor_manager"
                    app:layout_constraintTop_toBottomOf="@id/textView_become_a_mentor_manager" />

                <TextView
                    android:id="@+id/textView_page_3_of_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/page_3_of_4"
                    android:textColor="@color/mms_black_2"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintStart_toStartOf="@+id/textView_fill_in_the_form_below"
                    app:layout_constraintTop_toBottomOf="@id/textView_fill_in_the_form_below" />

                <TextView
                    android:id="@+id/textView_technical_proficiency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/technical_proficiency"
                    android:textColor="@color/mms_black_2"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_bold"
                    app:layout_constraintStart_toStartOf="@+id/textView_page_3_of_4"
                    app:layout_constraintTop_toBottomOf="@id/textView_page_3_of_4" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup_technical_proficiency"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_chips_choose"
                    android:paddingStart="20dp"
                    android:paddingEnd="5dp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView_technical_proficiency"
                    app:layout_constraintTop_toBottomOf="@+id/textView_technical_proficiency"
                    app:selectionRequired="true"
                    app:singleLine="false"
                    app:singleSelection="false">


                </com.google.android.material.chip.ChipGroup>

                <TextView
                    android:id="@+id/textView_previous_roles_held"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="@string/previous_roles_held"
                    android:textColor="@color/mms_black_2"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_bold"
                    app:layout_constraintStart_toStartOf="@+id/chipGroup_technical_proficiency"
                    app:layout_constraintTop_toBottomOf="@id/chipGroup_technical_proficiency" />


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup_previous_roles_held"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bg_chips_choose"
                    android:paddingStart="20dp"
                    android:paddingEnd="5dp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView_previous_roles_held"
                    app:layout_constraintTop_toBottomOf="@+id/textView_previous_roles_held"
                    app:selectionRequired="true"
                    app:singleLine="false"
                    app:singleSelection="false">


                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_next"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:onClick="@{()->viewModel.goToForthRegistrationForm()}"
                    android:text="@string/next"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="18sp"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/mukta_semibold"
                    app:layout_constraintBottom_toBottomOf="@+id/button_previous"
                    app:layout_constraintEnd_toEndOf="@+id/chipGroup_technical_proficiency"
                    app:layout_constraintStart_toEndOf="@+id/button_previous"
                    app:layout_constraintTop_toTopOf="@+id/button_previous" />

                <Button
                    android:id="@+id/button_previous"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="143dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="30dp"
                    android:onClick="@{()->viewModel.goToSecondRegistrationForm()}"
                    android:text="@string/previous"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/mms_pry_2"
                    android:textSize="18sp"
                    app:cornerRadius="10dp"
                    app:fontFamily="@font/mukta_semibold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/button_next"
                    app:layout_constraintStart_toStartOf="@+id/chipGroup_technical_proficiency"
                    app:layout_constraintTop_toBottomOf="@+id/chipGroup_previous_roles_held"
                    app:layout_constraintVertical_bias="1.0"
                    app:strokeColor="@color/mms_pry_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>