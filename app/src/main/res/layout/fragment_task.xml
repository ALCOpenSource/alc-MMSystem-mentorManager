<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.peculiaruc.alc_mmsystem_mentormanager.ui.task.TaskViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.task.TaskFragment">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_chips_group_filter"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:checkedChip="@id/chip_chat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:selectionRequired="true"
            app:singleLine="true"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_chat"
                style="@style/CustomChipTaskFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()-> viewModel.onSelectTask(1)}"
                android:text="   All   " />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_broadcast"
                style="@style/CustomChipTaskFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()-> viewModel.onSelectTask(2)}"
                android:text="Assigned"
                android:textSize="12sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_completed_task"
                style="@style/CustomChipTaskFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()-> viewModel.onSelectTask(3)}"
                android:text="Completed"
                android:textSize="12sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_my_tasks"
                style="@style/CustomChipTaskFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()-> viewModel.onSelectTask(4)}"
                android:text="My Tasks"
                android:textSize="12sp" />
        </com.google.android.material.chip.ChipGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_tasks"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chipGroup_tasks"
            tools:listitem="@layout/item_task" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCreateTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:clickable="true"
            android:elevation="1dp"
            android:focusable="true"
            android:onClick="@{()-> viewModel.onClickCreateTask()}"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/mms_pry_2"
            app:isNewTask="@{viewModel.taskType}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/mms_black_10"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>