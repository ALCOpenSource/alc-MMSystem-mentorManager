<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="item"
            type="com.peculiaruc.alc_mmsystem_mentormanager.data.models.Discussion" />

        <variable
            name="listener"
            type="com.peculiaruc.alc_mmsystem_mentormanager.ui.discussionForum.DiscussionInteractionListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="270dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/image_person"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/CircleImage" />


                <TextView
                    android:id="@+id/forumName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="22dp"
                    android:text="Samuel Kebede"
                    android:textColor="@color/mms_black_2"
                    android:textFontWeight="600"
                    android:textSize="18sp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintStart_toEndOf="@+id/image_person"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/forumPos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mentor Manager"
                    android:textColor="@color/mms_black_5"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintStart_toStartOf="@+id/forumName"
                    app:layout_constraintTop_toBottomOf="@+id/forumName" />

                <TextView
                    android:id="@+id/forumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="23dp"
                    android:text="The New MMS Discussion Forum "
                    android:textColor="@color/mms_black_2"
                    android:textFontWeight="600"
                    android:textSize="16sp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/forumPos" />

                <TextView
                    android:id="@+id/forumText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="13dp"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam eu turpis molestie, dictum est a, mattis tellus. Sed dignissim, metus nec fringilla accumsan, risus sem sollicitudin "
                    android:textColor="@color/mms_black_5"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    app:fontFamily="@font/mukta_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/forumTitle"
                    app:layout_constraintTop_toBottomOf="@+id/forumTitle" />

                <ImageView
                    android:id="@+id/forumIconMess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="21dp"
                    android:onClick="@{()-> listener.onItemCommentOnPostSelected(item)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/comment_circle_chat_message_1"
                    app:tint="@color/mms_black_5" />

                <ImageView
                    android:id="@+id/forumIconBookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="21dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/forumIconMess"
                    app:srcCompat="@drawable/ic_bookmark" />

                <ImageView
                    android:id="@+id/forumIconShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="21dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/forumIconBookmark"
                    app:srcCompat="@drawable/ic_share_arrow" />

                <ImageView
                    android:id="@+id/forumIconClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="27dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/forumTime"
                    app:srcCompat="@drawable/ic_clock" />

                <TextView
                    android:id="@+id/forumTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="24dp"
                    android:text="5h ago"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <ImageView
                    android:id="@+id/forumMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="13dp"
                    android:onClick="@{()-> listener.onItemEditDiscussionSelected(item)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_more_icon" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/forumMoreCard"
                    android:layout_width="111dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="6dp"
                    android:visibility="invisible"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/forum_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:text="Edit Post"
                            android:textColor="@color/mms_black_2"
                            android:textFontWeight="400"
                            android:textSize="12sp"
                            app:fontFamily="@font/mukta_regular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/forum_delete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="10dp"
                            android:text="Delete Post"
                            android:textColor="@color/mms_black_2"
                            android:textFontWeight="400"
                            android:textSize="12sp"
                            app:fontFamily="@font/mukta_regular"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/forum_edit" />

                        <ImageView
                            android:id="@+id/forum_up_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="6dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/forum_edit"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_arrow_up" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>