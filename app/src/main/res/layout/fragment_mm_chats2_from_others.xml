<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true">
    <!-- Frame 20 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_20"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/frame_20"
        android:clipToOutline="true"
        android:paddingBottom="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Mentors -->


        <!-- Hello Kabiru, trust you are well? -->
        <TextView
            android:id="@+id/chat_message_body"
            android:layout_width="238dp"
            android:layout_height="27dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"

            android:text="@string/chat_message_body"
            android:textAppearance="@style/chat_message_body"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 6:00 PM -->
        <TextView
            android:id="@+id/chat_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:gravity="top"
            android:text="@string/chat_message"
            android:textAppearance="@style/chat_message"
            app:layout_constraintStart_toStartOf="@+id/chat_message_body"
            app:layout_constraintTop_toBottomOf="@+id/chat_message_body" />
        <!-- Vector -->

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>