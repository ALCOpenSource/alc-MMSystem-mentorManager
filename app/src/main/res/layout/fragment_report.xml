<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.peculiaruc.alc_mmsystem_mentormanager.ui.fragments.mentor_reports.ReportFragment">

    <ImageView
        android:id="@+id/reportBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginTop="36dp"
        android:contentDescription="TODO"
        android:focusable="true"
        android:src="@drawable/arrow_left_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/reportTitle"
        style="@style/title_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="31dp"
        android:text="@string/title_reports"
        app:layout_constraintStart_toEndOf="@+id/reportBack"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/reportSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="22dp"
        android:maxWidth="290dp"
        android:textColor="@color/mms_black_5"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:fontFamily="@font/mukta"
        android:searchIcon="@drawable/abc_ic_search"
        android:searchHintIcon="@drawable/abc_ic_search"
        android:closeIcon="@null"
        android:queryBackground="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reportTitle"
        tools:targetApi="p" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reportList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportSpinner"
        tools:listitem="@layout/report_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reportFab"
        style="@style/Widget.App.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="81dp"
        android:contentDescription="@string/fab"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_baseline_add_24" />

    <Spinner
        android:id="@+id/reportSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/spinner_background"
        android:contentDescription="@string/report_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reportTitle"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>