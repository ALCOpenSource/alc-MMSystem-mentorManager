<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="customThemeForFab" parent="">
        <item name="colorSecondary">@color/mms_pry_2</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="materialThemeOverlay">@style/customThemeForFab</item>
    </style>

    <style name="reportSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/abc_ic_search</item>
    </style>

    <style name="roundedImageView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/abc_ic_search</item>
    </style>

    <style name="radio_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mms_black_2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="fontFamily">@font/mukta</item>
    </style>

    <style name="title_text_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mms_black_2</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="fontFamily">@font/mukta</item>
    </style>

    <style name="group_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mms_black_10</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/mukta</item>
    </style>

    <style name="program_group_button_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mms_black_10</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/mukta</item>
    </style>

    <style name="group_button_text_selected">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mms_pry_2</item>
        <item name="android:textFontWeight" tools:targetApi="p">700</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/mukta</item>
        <item name="android:background">@drawable/group_button_background</item>
    </style>

    <style name="spinnerStyle" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>
</resources>