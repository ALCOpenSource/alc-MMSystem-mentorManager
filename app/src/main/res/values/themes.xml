<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcMMSystemmentorManager" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mms_pry_2</item>
        <item name="colorPrimaryVariant">@color/mms_pry_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" >@color/white</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/AppActionBar</item>
        <item name="materialSwitchStyle">@style/settingSwitch</item>

    </style>

    <!--  Theme for splash screen  -->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/mms_pry_2</item>
        <item name="colorPrimaryVariant">@color/mms_pry_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white</item>
    </style>

    <style name="settingSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">@color/mms_pry_2</item>
        <item name="colorOutline">@color/mms_black_7</item>
        <item name="colorSurfaceVariant">@color/mms_black_10</item>
    </style>

    <style name="AppActionBar" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/mms_black_2</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="elevation">0dp</item>
        <item name="windowActionBarOverlay">@null</item>
        <item name="android:actionButtonStyle">@style/menuIconStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:paddingStart">0dip</item>
        <item name="android:paddingEnd">0dip</item>
    </style>

    <style name="menuIconStyle" parent="@android:style/Widget.ActionButton">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="titleMarginStart">0dp</item>
    </style>

    <style name="regularB">
        <item name="android:fontFamily">@font/mukta_regular</item>
        <item name="android:textColor">@color/mms_black_2</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="mediumMukta">
        <item name="android:fontFamily">@font/mukta_bold</item>
        <item name="android:textColor">@color/mms_black_2</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="mediumRoboto">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/mms_black_2</item>
        <item name="android:textSize">@dimen/font_regular</item>
    </style>


    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ChipProfile" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/mms_pry_10</item>
        <item name="chipBackgroundColor">@color/mms_green_11</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/mms_pry_2</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonOutline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="strokeColor">@color/mms_pry_2</item>
        <item name="textOutlineColor">@color/mms_pry_2</item>
        <item name="fontFamily">@font/mukta_regular</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="chipStrokeColor">@color/chip_stroke_selector</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">@dimen/chip_mentor_profile_height</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/mukta_medium</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipCornerRadius">5dp</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_color_states</item>
        <item name="android:textColor">@color/chip_text_color_states</item>
    </style>

    <style name="CustomChipTaskFilter" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_task_filter_color_states</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="android:textColor">@color/chip_task_filter_text_color_states</item>
        <item name="fontFamily">@font/mukta_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>